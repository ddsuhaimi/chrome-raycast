{
  "manifest_version": 3,
  "name": "Raychrome",
  "version": "0.1.0",
  "description": "Command palette for Chrome, inspired by Raycast",
  "permissions": ["tabs", "activeTab", "scripting", "storage", "commands"],
  "background": {
    "service_worker": "src/background/background.ts"
  },
  "action": {
    "default_popup": "src/popup/popup.html",
    "default_title": "Raychrome"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/content/content.tsx"],
      "run_at": "document_idle"
    }
  ],
  "commands": {
    "toggle-palette": {
      "suggested_key": {
        "default": "Ctrl+K",
        "mac": "Command+K"
      },
      "description": "Toggle command palette (tab mode)"
    },
    "toggle-palette-action": {
      "suggested_key": {
        "default": "Ctrl+Shift+K",
        "mac": "Command+Shift+K"
      },
      "description": "Toggle command palette (action mode)"
    }
  }
}
